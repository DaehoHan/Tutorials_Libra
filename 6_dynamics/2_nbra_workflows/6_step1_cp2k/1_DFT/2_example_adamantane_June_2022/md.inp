&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    !WFN_RESTART_FILE_NAME Si_QD_xtb-RESTART.wfn

    &XC
      !&XC_FUNCTIONAL PBE
      !&END XC_FUNCTIONAL
 
      !&XC_FUNCTIONAL
      !  &GGA_X_PBE .TRUE.
      !    SCALE 1.0
      !  &END
      !  &GGA_C_PBE .TRUE.
      !    SCALE 1.0
      !  &END
      !&END 

      &XC_FUNCTIONAL
        &BEEF .TRUE.
        &END
      &END

   &END XC

 

    &QS
      METHOD GPW

      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END
    &END QS

    &POISSON
      POISSON_SOLVER PERIODIC
      PERIODIC XYZ
    &END

    &SCF
      SCF_GUESS ATOMIC 
      EPS_SCF 1.e-6
!      ADDED_MOS 50
      &OT
         PRECONDITIONER FULL_SINGLE_INVERSE
         MINIMIZER DIIS
      &END
!      &OUTER_SCF
!         MAX_SCF  30
!         EPS_SCF 1.e-8
!      &END
      MAX_SCF  30
    &END SCF
  &END DFT

  &SUBSYS
    &CELL
      A 30.000000000000000 0.0000000000000000 0.0000000000000000
      B 0.0000000000000000 30.000000000000000 0.0000000000000000
      C 0.0000000000000000 0.0000000000000000 30.000000000000000
      PERIODIC XYZ
    &END CELL

    &TOPOLOGY
      COORD_FILE_NAME adamantane.xyz 
      COORD_FILE_FORMAT XYZ
      &CENTER_COORDINATES T
      &END
    &END



    &KIND C
      ELEMENT C
      BASIS_SET ORB DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
      ELEMENT H
      BASIS_SET ORB DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND  N
     ELEMENT N
     BASIS_SET DZVP-MOLOPT-GTH
     POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND  F
     ELEMENT F
     BASIS_SET DZVP-MOLOPT-GTH
     POTENTIAL GTH-PBE-q7
    &END KIND


   &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PROJECT adamantane
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 8000
    TIMESTEP 0.25
    TEMPERATURE 300.0
   &THERMOSTAT
     REGION GLOBAL
     TYPE CSVR
	 &CSVR
	   TIMECON 15
	 &END
   &END THERMOSTAT
  &END MD

  &PRINT
   &TRAJECTORY
     &EACH
       MD 1
     &END EACH
   &END TRAJECTORY

   &VELOCITIES ON
   &END VELOCITIES

   &FORCES ON
   &END FORCES   

   &RESTART_HISTORY
     &EACH
       MD 50
     &END EACH
   &END RESTART_HISTORY

   &RESTART
     BACKUP_COPIES 1
     &EACH
       MD 50
     &END EACH
   &END RESTART

  &END PRINT

&END MOTION

