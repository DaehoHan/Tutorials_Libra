&FORCE_EVAL
  &DFT
    WFN_RESTART_FILE_NAME .wfn
    &QS
      METHOD xTB
      &xTB
        DO_EWALD  T
        CHECK_ATOMIC_CHARGES  T
        COULOMB_INTERACTION T
        &PARAMETER
          DISPERSION_PARAMETER_FILE  dftd3.dat
          PARAM_FILE_NAME xTB_parameters
        &END PARAMETER
      &END
      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END
    &END QS
    &POISSON
      POISSON_SOLVER PERIODIC !MT
      PERIODIC XYZ !NONE
    &END
    &SCF
      SCF_GUESS RESTART !MOPAC
      EPS_SCF 1.e-6
      ADDED_MOS 300
!      &OUTER_SCF
!         MAX_SCF  30
!         EPS_SCF 1.e-6
!      &END
      MAX_SCF 50 
    &END SCF
    &PRINT
      &MO ON
        FILENAME si_qd_xTB
        EIGENVECTORS F
        EIGENVALUES F
        NDIGITS 8
      &END
      &PDOS 
        APPEND T
        COMPONENTS T
        FILENAME si_qd
      &END
      &MO_MOLDEN ON
        FILENAME    
        NDIGITS 8
        GTO_KIND SPHERICAL
      &END 
    &END
  &END DFT
  &SUBSYS
    &CELL
      ABC 35.0 35.0 35.0
      PERIODIC XYZ
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME coord.xyz 
      COORD_FILE_FORMAT XYZ
      &CENTER_COORDINATES T
      &END
    &END
   &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT_NAME Si_QD_xtb
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL

